<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CheckBalanceActivity">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="-50dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:id="@+id/cancelimg4"
                    android:src="@drawable/ic_clear_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login History"
                    android:layout_marginTop="20dp"
                    android:textSize="23sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:onClick="showPopUp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_settings_power_black_24dp"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#d7e4f1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_filter_list_black_24dp"/>
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="280dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="189dp"
                    android:elevation="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/biggercircle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="July 14,"
                    android:elevation="16dp"
                    android:fontFamily="sans-serif"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="98dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2018"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="144dp"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-light"
                    android:elevation="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="03:12"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="190dp"
                    android:textSize="17sp"
                    android:elevation="16dp"/>

            </FrameLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_error_black_24dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3:30 - 06:00"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Abraham Hall"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="29dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="08:00 - 11:34"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Sarah Hall"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="29dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="12:24 - 14:19"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Chapel"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="29dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="14:19 - 14:33"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Chapel"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="29dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>