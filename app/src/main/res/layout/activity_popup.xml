<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="420dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    tools:context=".Popup">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textColor="#9fa8da"
        android:textStyle="bold"
        android:id="@+id/textcloser"
        android:gravity="center"
        android:layout_gravity="end"
        android:background="@drawable/circlebackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="We are sad to see you go!"
        android:textColor="#9fa8da"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Are you sure you want to logout?"
        android:layout_gravity="center"
        android:textColor="#9fa8da"
        android:gravity="center"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="2">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:text="NO"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="10dp"
            android:id="@+id/nobutt"
            android:textColor="#FFF"
            android:background="@drawable/totround_button"
            android:layout_weight="1"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="YES"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:textColor="#FFF"
            android:id="@+id/yesbutt"
            android:gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/totround_button"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>