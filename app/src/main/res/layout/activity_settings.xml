<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="-50dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:src="@drawable/ic_clear_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_marginTop="20dp"
                    android:textSize="23sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_settings_power_black_24dp"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:background="#9fa8da"></LinearLayout>
                <ImageView
                    android:layout_width="170dp"
                    android:padding="5dp"
                    android:elevation="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/biggercircle"
                    android:layout_height="170dp" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:elevation="16dp"
                    android:layout_marginTop="140dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_info_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V 1.0.0"
                    android:textSize="15sp"
                    android:textColor="#9fa8da"
                    android:elevation="16dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="220dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:layout_marginTop="20dp"
                        android:background="#FFF"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_cloud_done_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check for Updates"
                                android:textSize="10sp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>
                            
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="6dp"
                                android:src="@drawable/ic_swap_vertical_circle_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Share History"
                                android:layout_marginTop="5dp"
                                android:textSize="10sp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_clear_all_black_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clear the Cache"
                                android:gravity="center_vertical"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>
                            
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:background="#FFF"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_language_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disconnect Globally"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_notifications_none_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Push Notifications"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginBottom="2dp"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_assignment_black_24dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FAQs"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:background="#FFF"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#d6d9e7"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_bug_report_black_24dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About the App"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_thumbs_up_down_black_24dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feedback"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#d6d9e7"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="4dp"
                                android:src="@drawable/ic_power_settings_new_black_24dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#32364b"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>
        </RelativeLayout>



    </LinearLayout>
</ScrollView>